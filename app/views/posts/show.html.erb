<div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
        <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
        <h1><%= @post.title %></h1>
        <hr>
    </header>

    <div id="content">
        <%= markdown @post.content %>
    </div>

    <hr>

    <% if user_signed_in? %>
        <div id="admin_links">
            <%= link_to 'Edit', edit_post_path(@post) %>
            <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
    <% end %>

    <div id="share_box">
        <p>Share <%= @post.title %></p>
        <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @post.title %> by @jzeken14 - &amp;url=<%= url_for([@post, {only_path: true}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-google-plus"></i></a>
    </div>
    <hr>
    <%= render 'shared/disqus' %>
</div>
